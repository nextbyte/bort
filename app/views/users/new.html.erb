<div class="block">
    <%= title "Signup", :h2 %>
    <% @user.password = @user.password_confirmation = nil %>
    <div class="content">
        <div class="inner">
            <% form_for @user, :html=> { :class=>:form } do |f| %>
            <%= f.error_messages %>
            <div class="group">
            	<div class="left">
                <%= f.label :login, 'Username',:class=>:label %>
                </div>
                <div class="right">
                <%= f.text_field :login, :class => "text_field" %>
                </div>
                <div class="clear"></div>
            </div>
            <div class="group">
            	<div class="left">
                <%= f.label :email,'Email', :class=>:label %>
                </div>
                <div class="right">
                <%= f.text_field :email, :class => "text_field" %>
                </div>
                <div class="clear"></div>
            </div>
            <div class="group">
            	<div class="left">
                <%= f.label :password, 'Password', :class=>:label %>
                </div>
                <div class="right">
                <%= f.password_field :password, :class => "text_field" %>
                </div>
                <div class="clear"></div>
            </div>
            <div class="group">
            	<div class="left">
                <%= f.label :password_confirmation, 'Confirm Password', :class=>:label %>
                </div>
                <div class="right">
                <%= f.password_field :password_confirmation, :class => "text_field" %>
                </div>
                <div class="clear"></div>
            </div>
            <%= title "Signup with OpenID", :h3 %>
            <div class="group">
            	<div class="left">
                <label for="openid_url" class="label">
                    OpenID URL
                </label>
                </div>
                <div class="right">
                <%= text_field_tag :openid_url, params[:openid_url] || params['openid.identity'], :class => "text_field" %>
                </div>
                <div class="clear"></div>
            </div>
            <div class="group navform">
                <%= submit_tag 'Sign up',:class=>:button %>
            </div>
            <% end %>
        </div>
    </div>
</div>
